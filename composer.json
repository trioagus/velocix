{
    "name": "velocix/velocix",
    "description": "Velocix Application Starter Kit - Fast SPA-Ready PHP Framework",
    "keywords": ["velocix", "framework", "starter", "spa", "php"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Trio Agus Susanto",
            "email": "pribadiagus321@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2|^8.3|^8.4|^8.5",
        "velocix/framework": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "Composer\\Config::disableProcessTimeout",
            "@php install.php"
        ],
        "post-autoload-dump": [
            "@php -r \"file_exists('velocix') && chmod('velocix', 0755);\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('velocix') && chmod('velocix', 0755);\""
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('velocix') && chmod('velocix', 0755);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}